#:kivy 2.0.0

<Clients>:
    name: '_clients_'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/listbg.png'

    Button:
        size_hint: .15, .08
        background_color: 0,0,0,0
        pos_hint: {'center_x': 0.90, 'center_y': 0.95}
        on_press: root.button_press()
        on_release: root.button_release()
    Image:
        id: backbutton
        source: 'images/back1.png'
        size_hint: .15, .08
        pos_hint: {'center_x': 0.90, 'center_y': 0.95}

    MDGridLayout:  # Use a GridLayout to organize your elements
        cols: 1
        spacing: dp(5)
        padding: dp(16)

        MDLabel:
            text: "Users"
            size_hint_y: None
            halign: 'center'
            theme_text_color: 'Primary'
            bold: True
            font_style: 'H4'
            font_name: "Sunny Spells"
            pos_hint: {'center_x': 0.5, 'center_y': 0.95}

        MDScrollView:
            size_hint: .8, None
            height: dp(400)  # Adjust the scrollable list's height

            MDList:
                id: client_list
                spacing: dp(5)

<ThreeLineListItem>:
    on_release: app.root.get_screen('_clients_').on_item_click(root.text, root.secondary_text, root.tertiary_text)
    secondary_text: ""
    tertiary_text: ""

