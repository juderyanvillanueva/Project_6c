#:kivy 2.0.0

<SchedScreenClient>:
    name: '_schedscreenclient_'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/bg.png'
    Button:
        size_hint: .15, .08
        background_color: 0,0,0,0
        pos_hint: {'center_x': 0.90, 'center_y': 0.95}
        on_press: root.button_press()
        on_release: root.button_release()
    Image:
        id: backbutton
        source: 'images/back1.png'
        size_hint: .15, .08
        pos_hint: {'center_x': 0.90, 'center_y': 0.95}


    MDLabel:
        text: "Consultation \n Schedule: \n"
        size_hint_y: None
        halign: 'center'
        theme_text_color: 'Primary'
        bold: True
        font_style: 'H3'
        font_name: "Sunny Spells"
        pos_hint: {'center_x': 0.5, 'center_y': 0.80}

    MDLabel:
        id: username_label  # Add this line to define the label
        text: ""
        size_hint_y: None
        halign: 'center'
        theme_text_color: 'Primary'
        bold: True
        font_style: 'H5'
        font_name: "Sunny Spells"
        pos_hint: {'center_x': 0.5, 'center_y': 0.95}  # Adjust the position as needed

    MDLabel:
        id: date_label
        text: "No Schedule"
        size_hint_y: None
        halign: 'center'
        theme_text_color: 'Error'
        bold: True
        font_style: 'H2'
        font_name: "Sunny Spells"
        pos_hint: {'center_x': 0.5, 'center_y': 0.65}

    MDLabel:
        id: time_label
        text: ""
        size_hint_y: None
        halign: 'center'
        theme_text_color: 'Error'
        bold: True
        font_style: 'H3'
        font_name: "Sunny Spells"
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}
