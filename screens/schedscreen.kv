#:kivy 2.0.0

<SchedScreen>:
    name: '_sched_screen_'
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'images/bg.png'
    Button:
        size_hint: .15, .08
        background_color: 0,0,0,0
        pos_hint: {'center_x': 0.90, 'center_y': 0.95}
        on_press: root.button_press()
        on_release: root.button_release()
    Image:
        id: backbutton
        source: 'images/back1.png'
        size_hint: .15, .08
        pos_hint: {'center_x': 0.90, 'center_y': 0.95}


    MDLabel:
        text: "Consultation \n Schedule: \n"
        size_hint_y: None
        halign: 'center'
        theme_text_color: 'Primary'
        bold: True
        font_style: 'H3'
        font_name: "Sunny Spells"
        pos_hint: {'center_x': 0.5, 'center_y': 0.80}

    MDLabel:
        id: username_label  # Add this line to define the label
        text: ""
        size_hint_y: None
        halign: 'center'
        theme_text_color: 'Primary'
        bold: True
        font_style: 'H5'
        font_name: "Sunny Spells"
        pos_hint: {'center_x': 0.5, 'center_y': 0.95}  # Adjust the position as needed

    MDLabel:
        id: date_label
        text: "No Schedule"
        size_hint_y: None
        halign: 'center'
        theme_text_color: 'Error'
        bold: True
        font_style: 'H2'
        font_name: "Sunny Spells"
        pos_hint: {'center_x': 0.5, 'center_y': 0.65}

    MDLabel:
        id: time_label
        text: ""
        size_hint_y: None
        halign: 'center'
        theme_text_color: 'Error'
        bold: True
        font_style: 'H3'
        font_name: "Sunny Spells"
        pos_hint: {'center_x': 0.5, 'center_y': 0.55}

    MDFillRoundFlatIconButton:
        text: "Choose Date"
        id: progress_button
        icon: 'calendar-badge'
        icon_size: "40sp"
        font_name: "Sunny Spells"
        font_size: "23"
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}
        size_hint: (0.4, 0.08)
        md_bg_color: 1/255, 204/255, 255/255, 1
        text_color: 0, 0, 0, 1
        on_press: root.click()
        on_release:
            root.show_date_picker()

    MDFillRoundFlatIconButton:
        text: "Choose Time"
        icon: 'clock-time-eight-outline'
        icon_size: "40sp"
        font_name: "Sunny Spells"
        font_size: "23"
        pos_hint: {'center_x': 0.5, 'center_y': 0.24}
        size_hint: (0.4, 0.08)
        md_bg_color: 1/255, 204/255, 255/255, 1
        text_color: 0, 0, 0, 1
        on_press: root.click()
        on_release:
            root.show_time_picker()

    MDFillRoundFlatIconButton:
        id: message_button
        text: 'Send Reminder'
        icon: 'message-badge-outline'
        icon_size: "40sp"
        font_name: "Sunny Spells"
        font_size: "23"
        pos_hint: {'center_x': 0.5, 'center_y': 0.13}
        size_hint: (0.4, 0.08)
        md_bg_color: 1/255, 229/255, 255/255, 1
        text_color: 0, 0, 0, 1
        on_press: root.click()
        on_release:
            root.send_reminder()